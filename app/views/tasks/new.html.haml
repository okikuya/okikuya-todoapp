.container
  %h2.header_pageTitle New Card
  .new-board-form
    = form_with(model: @task, url: board_tasks_path(@board), local: true) do |f|
      %div.board_field
        = f.label :title, "Name"
        %br/
        = f.text_field :title
      %div.board_field
        = f.label :content, "Description"
        %br/
        = f.text_area :content, class: "board-description"
      %div.board_field
        = f.label :deadline, "Deadline"
        %br/
        = f.datetime_field :deadline
      .actions
        = f.submit "Submit", class: "submit-btn"
