.container
    %h2 All Boards
    %div
        - @boards.each do |board|
            %div
                %div
                    = board.name
                    -# 3つのドットボタン（メニュー）
                    - if board.user == current_user
                        .menu-container
                            %button.menu-button{ tabindex: "0" }
                                •••
                            .menu-content
                                = link_to '更新', edit_board_path(board), class: "menu-item"
                                = link_to '削除', board_path(board), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "menu-item delete"

                %div
                    = board.description
                .field
                    %p
                        - if current_user.avatar.attached?
                            -# = image_tag current_user.avatar, alt: "User Avatar", class: "user-avatar"
                            = image_tag board.user.avatar, alt: "Board Creator Avatar", class: "user-avatar"
                        - else
                            = image_tag "default-avatar.png", alt: "Default Avatar", class: "user-avatar"

    .add-board
    = link_to "+ Add new board", new_board_path, class: "add-board-button"