!!!
%html
  %head
    %meta{ "http-equiv" => "Content-Type", content: "text/html; charset=UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }
    %title TodoApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header 
      %h2 Boards
      - if user_signed_in?
        %p.logout-text
          - if current_user.avatar.attached?
            = image_tag current_user.avatar.variant(resize: "40x40"), alt: "User Avatar", class: "user-avatar"
          - else
            = image_tag "default-avatar.png", alt: "Default Avatar", class: "user-avatar"
          -# %span= "Logged in as: #{current_user.email}"
        -# %p.logout-text
        -#   ログイン中: #{current_user.email}
        -#   = link_to "ログアウト", destroy_user_session_path, data: { method: 'delete' }
      - else
        .header_buttons
          = link_to "ログイン", new_user_session_path
          = link_to "新規登録", new_user_registration_path
    .message-wrap
      %p.notice= notice
      %p.alert= alert
    = yield

